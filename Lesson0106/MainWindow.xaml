                    Style="{DynamicResource ButtonStyle1}" Click="btnMulti_Click"
                ></Button>

                <Button
                     x:Name="btnDiv"
               
                Height="110"
                Width="110"
                    Background="#dcdcdc"
                   BorderThickness="0"
                    Content="÷"
                     FontSize="70"
                    Style="{DynamicResource ButtonStyle1}" Click="btnDiv_Click"
                    ></Button>
            </StackPanel>
            <StackPanel>

                <Button
                    x:Name="btnEq"
                Height="110"
                Width="110"
