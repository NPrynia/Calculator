                Height="110"
                Width="110"
                    Content="7"
                FontSize="70"
                  Background="#dcdcdc"
                   BorderThickness="0"
                    Style="{DynamicResource ButtonStyle1}" Click="btn7_Click"
                    ></Button>
                <Button
                    Name="btn0"
                Height="110"
                Width="110"
                    Content="0"
                FontSize="70"
                     Background="#dcdcdc"
                   BorderThickness="0"
                    Style="{DynamicResource ButtonStyle1}" Click="btn0_Click"
                ></Button>
            </StackPanel>
            <StackPanel>



                <Button
                    x:Name="btn2"
                Height="110"
                Width="110"
                Content="2"
                FontSize="70"
                Background="#dcdcdc"
                   BorderThickness="0"
                    Style="{DynamicResource ButtonStyle1}" Click="btn2_Click"
                ></Button>

                <Button
                x:Name="btn5"
                Height="110"
                Width="110"
                Content="5"
                FontSize="70"
                Background="#dcdcdc"
                   BorderThickness="0"
                    Style="{DynamicResource ButtonStyle1}" Click="btn5_Click"
                ></Button>

                <Button
                    x:Name="btn8"
                Height="110"
                Width="110"
                    Content="8"
                Background="#dcdcdc"
                   BorderThickness="0"
                    FontSize="70"
                    Style="{DynamicResource ButtonStyle1}" Click="btn8_Click"
                    ></Button>
                <Button
                    x:Name="btnComma"
                Height="110"
