                ></Button>

                <Button
                    Name="btnMinus"
                Height="110"
                Width="110"
                     Content="-"
                FontSize="70"
                    Background="#dcdcdc"
                    Style="{DynamicResource ButtonStyle1}"
                   BorderThickness="0" Click="btnMinus_Click"
                ></Button>

                <Button
                   Name="btnPlus"
                Height="110"
                Width="110"
                     Content="+"
                FontSize="70"
                    Style="{DynamicResource ButtonStyle1}"
                    Background="#dcdcdc"
                   BorderThickness="0" Click="btnPlus_Click"
                    ></Button>
            </StackPanel>




        </StackPanel>

    </Grid>
</Window>
